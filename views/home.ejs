<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Source Code Hub | Futuristic Repository</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;500;700&family=JetBrains+Mono&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Space Grotesk', sans-serif; background-color: #000000; color: #ffffff; }
        .mono { font-family: 'JetBrains Mono', monospace; }
        .cyber-card { 
            background: rgba(20, 20, 20, 0.8);
            border: 1px solid #27272a;
            border-radius: 2.5rem;
            transition: all 0.3s ease;
        }
        .cyber-card:hover { 
            border-color: #FF0000;
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.2);
            transform: translateY(-5px);
        }
        .red-glow { text-shadow: 0 0 10px #FF0000; }
        .btn-red { background: #FF0000; color: white; border-radius: 2.5rem; transition: 0.3s; }
        .btn-red:hover { box-shadow: 0 0 15px #FF0000; scale: 1.05; }
        input { background: #18181b; border: 1px solid #27272a; border-radius: 2.5rem; padding: 1rem 1.5rem; }
        input:focus { outline: none; border-color: #FF0000; }
    </style>
</head>
<body class="p-6 md:p-12">

    <!-- HEADER & BRANDING -->
    <header class="text-center mb-16">
        <h1 class="text-5xl md:text-7xl font-bold mb-4 mono">
            <span class="text-[#FF0000] tracking-tighter">&lt;/&gt;</span> Source Code
        </h1>
        <a href="/admin/login" class="inline-block mt-4 px-8 py-2 border border-zinc-800 rounded-full hover:border-[#FF0000] transition text-sm text-zinc-400">
            INFO üëë PROFIL ADMIN
        </a>
    </header>

    <!-- SEARCH BAR -->
    <div class="max-w-3xl mx-auto mb-16">
        <form action="/" method="GET" class="relative">
            <input type="text" name="search" placeholder="Cari proyek atau bahasa pemrograman..." value="<%= search || '' %>" class="w-full text-lg">
            <button type="submit" class="absolute right-4 top-3 text-[#FF0000] font-bold">SEARCH</button>
        </form>
    </div>

    <!-- PROJECT LIST -->
    <main class="max-w-5xl mx-auto grid gap-6">
        <% if(projects.length > 0) { %>
            <% projects.forEach(project => { %>
                <a href="/project/<%= project._id %>" class="cyber-card p-8 flex flex-col md:flex-row justify-between items-center gap-6">
                    <div>
                        <span class="text-xs text-[#FF0000] font-bold uppercase tracking-widest px-3 py-1 border border-[#FF0000] rounded-full mb-3 inline-block">
                            <%= project.type %>
                        </span>
                        <h2 class="text-2xl font-bold"><%= project.name %></h2>
                        <p class="text-zinc-500 mt-1 mono text-sm italic"># <%= project.language %></p>
                    </div>
                    <div class="flex gap-8 text-sm font-bold">
                        <div class="text-center">
                            <p class="text-zinc-500">LIKES</p>
                            <p class="text-xl">‚ù§Ô∏è <%= project.likes %></p>
                        </div>
                        <div class="text-center">
                            <p class="text-zinc-500">DOWNLOADS</p>
                            <p class="text-xl">‚¨áÔ∏è <%= project.downloads %></p>
                        </div>
                    </div>
                </a>
            <% }) %>
        <% } else { %>
            <div class="text-center py-20 text-zinc-600 border border-dashed border-zinc-800 rounded-[2.5rem]">
                Tidak ada proyek ditemukan dalam database.
            </div>
        <% } %>
    </main>

    <!-- CHAT ADMIN SECTION -->
    <section class="max-w-5xl mx-auto mt-24 mb-32">
        <h3 class="text-3xl font-bold mb-8 text-center">DIRECT CONTACT</h3>
        <div class="grid md:grid-cols-2 gap-8">
            <% admins.forEach(adm => { %>
                <div class="cyber-card p-8 flex items-center gap-6">
                    <img src="<%= adm.photoUrl %>" class="w-20 h-20 rounded-full border-2 border-[#FF0000] object-cover" alt="Profile">
                    <div>
                        <h4 class="text-xl font-bold"><%= adm.name %></h4>
                        <p class="text-xs text-green-500 font-bold mb-3">‚óè ONLINE</p>
                        <button onclick="alert('System Chat Real-time Sedang Dimulai...')" class="btn-red px-6 py-2 text-sm">
                            CHAT <%= adm.role.toUpperCase() %>
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- FLOATING NAV (Mobile First) -->
    <nav class="fixed bottom-8 left-1/2 -translate-x-1/2 bg-zinc-900/80 backdrop-blur-xl border border-zinc-800 px-8 py-4 rounded-full flex gap-12 z-50">
        <a href="/" class="hover:text-[#FF0000] transition">HOME</a>
        <a href="/admin/dashboard" class="hover:text-[#FF0000] transition">DASHBOARD</a>
        <a href="#" class="hover:text-[#FF0000] transition text-zinc-600">ABOUT</a>
    </nav>

</body>
</html>
